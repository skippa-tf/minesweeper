<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainVBox" fillWidth="false" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
    <MenuBar style="-fx-background-color: eee8d6;" VBox.vgrow="ALWAYS">
      <menus>
        <Menu mnemonicParsing="false" style="-fx-padding: 2 0 2 2;" text="Game">
               <items>
                  <MenuItem fx:id="beginnerMenuItem" mnemonicParsing="false" text="Beginner" />
                  <MenuItem fx:id="intermediateMenuItem" mnemonicParsing="false" text="Intermediate" />
                  <MenuItem fx:id="expertMenuItem" mnemonicParsing="false" text="Expert" />
               </items>
        </Menu>
      </menus>
    </MenuBar>
      <VBox fillWidth="false" style="-fx-background-color: c0c0c0; -fx-border-color: white c0c0c0 c0c0c0 white; -fx-border-style: solid; -fx-border-width: 3 3 3 3; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0, 0, 1);">
        <children>
            <VBox fillWidth="false" spacing="7.0" style="-fx-border-width: 5; -fx-border-color: c0c0c0;" VBox.vgrow="ALWAYS">
               <children>
                  <HBox fx:id="timerContainer" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" style="-fx-border-style: solid; -fx-border-width: 2; -fx-border-color: #7f7f7f white white #7f7f7f;">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <HBox alignment="CENTER" fillHeight="false" maxHeight="23.0" style="-fx-border-color: #7f7f7f white white #7f7f7f; -fx-border-width: 1.5;">
                                 <children>
                                    <ImageView fx:id="bombCounterHundreds" fitHeight="23.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../images/t0.png" />
                                       </image>
                                    </ImageView>
                                    <ImageView fx:id="bombCounterTens" fitHeight="23.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../images/t0.png" />
                                       </image>
                                    </ImageView>
                                    <ImageView fx:id="bombCounterOnes" fitHeight="23.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../images/t0.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </HBox>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                        </HBox>
                        <HBox fx:id="smileHBox" fillHeight="false">
                           <padding>
                              <Insets bottom="5.0" top="5.0" />
                           </padding>
                           <children>
                              <Button fx:id="smileBTN" alignment="CENTER" focusTraversable="false" graphicTextGap="0.0" mnemonicParsing="false">
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </Button>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="12.0" layoutY="12.0">
                           <children>
                              <HBox alignment="CENTER" fillHeight="false" maxHeight="23.0" style="-fx-border-color: #7f7f7f white white #7f7f7f; -fx-border-width: 1.5;">
                                 <children>
                                    <ImageView fx:id="timerHundreds" fitHeight="23.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../images/t0.png" />
                                       </image>
                                    </ImageView>
                                    <ImageView fx:id="timerTens" fitHeight="23.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../images/t0.png" />
                                       </image>
                                    </ImageView>
                                    <ImageView fx:id="timerOnes" fitHeight="23.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../../images/t0.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </HBox>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                        </HBox>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
                  <VBox fx:id="vBoxForMinefield" style="-fx-border-color: #7f7f7f white white #7f7f7f; -fx-border-width: 3;" />
               </children>
            </VBox>
        </children>
      </VBox>
   </children>
</VBox>
